---
- name: Copy template
  ansible.builtin.copy:
    src: packer_tutorial.hcl
    dest: "/home/{{ansible_user}}/"

- name: Initialize Packer configuration
  command: packer init .
  args:
    chdir: "/home/{{ansible_user}}/"
    creates: "/home/{{ansible_user}}/.config/packer/plugins/github.com/hashicorp/docker/packer-plugin-docker*"

- name: Remove template
  ansible.builtin.file:
    path: "/home/{{ansible_user}}/packer_tutorial.hcl"
    state: absent
